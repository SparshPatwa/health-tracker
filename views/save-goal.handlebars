    <div>
        <label for="exerciseGoal">Daily Workout Calorie Goal:</label>
        <input class="form-control" type="text" id="exerciseGoal" name="exercise-goal" />
    </div>
    <div class="form-group col-xl-6 col-lg-6 col-md-6 col-12 p-0">
        <label>Enter Date:</label>
        <input class="form-control h-100 m1-1 mr-1" type="date" id="goalDate" name="goal-date" />
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-success m-4" type="submit" id="saveGoal">Save</button>
    </div>
